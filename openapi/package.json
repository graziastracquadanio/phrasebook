{
  "name": "openapi",
  "version": "1.0.0",
  "scripts": {
    "lint": "redocly lint src/openapi.yaml",
    "bundle": "redocly bundle src/openapi.yaml --output dist/bundle.yaml",
    "build-docs": "redocly build-docs dist/bundle.yaml --output dist/index.html",
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "src/**/*.yaml": "npm run lint"
  },
  "devDependencies": {
    "@redocly/cli": "^1.12.2"
  }
}
